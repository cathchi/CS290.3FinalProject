<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/taskEditString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Task"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/taskString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task:"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/tw__light_gray"/>

    <EditText
        android:id="@+id/taskNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Task Here"
        android:padding="10dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/notesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes:"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:background="@color/tw__light_gray"/>

    <EditText
        android:id="@+id/notesEdit"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put details of the task here" />

    <TextView
        android:id="@+id/assignLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assigned To:"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/tw__light_gray"/>

    <EditText
        android:id="@+id/assignEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:hint="List who is assigned to the task" />

    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:background="@color/tw__light_gray"/>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="50dp">

        <Button
            android:id="@+id/deleteLocationButton"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="@color/tw__solid_white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/locationEdit"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/locationEdit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Click to choose a location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/tw__solid_white"
            android:textColor="@color/tw__blue_pressed"/>

    </RelativeLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:text="Done" />

</LinearLayout>